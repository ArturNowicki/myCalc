<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="460.0" prefWidth="290.0" spacing="16.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <children>
      <TextField fx:id="currentCalculation" alignment="CENTER_RIGHT" editable="false">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="answerField" alignment="CENTER_RIGHT" editable="false">
         <font>
            <Font size="24.0" />
         </font>
      </TextField>
      <HBox prefHeight="60.0" prefWidth="270.0" spacing="10.0" alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="btnClear" mnemonicParsing="false" onAction="#processControl" prefHeight="60.0" prefWidth="60.0" text="C" />
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#processControl" prefHeight="60.0" prefWidth="60.0" text="←" />
         </children>
      </HBox>
      <HBox prefHeight="60.0" prefWidth="270.0" spacing="10.0">
         <children>
            <Button fx:id="btn7" mnemonicParsing="false" onAction="#processNumber" prefHeight="60.0" prefWidth="60.0" text="7" />
            <Button fx:id="btn8" mnemonicParsing="false" onAction="#processNumber" prefHeight="60.0" prefWidth="60.0" text="8" />
            <Button fx:id="btn9" mnemonicParsing="false" onAction="#processNumber" prefHeight="60.0" prefWidth="60.0" text="9" />
            <Button fx:id="btnPlus" mnemonicParsing="false" onAction="#processSymbol" prefHeight="60.0" prefWidth="60.0" text="+" />
         </children>
      </HBox>
      <HBox prefHeight="60.0" prefWidth="270.0" spacing="10.0">
         <children>
            <Button fx:id="btn4" mnemonicParsing="false" onAction="#processNumber" prefHeight="60.0" prefWidth="60.0" text="4" />
            <Button fx:id="btn5" mnemonicParsing="false" onAction="#processNumber" prefHeight="60.0" prefWidth="60.0" text="5" />
            <Button fx:id="btn6" mnemonicParsing="false" onAction="#processNumber" prefHeight="60.0" prefWidth="60.0" text="6" />
            <Button fx:id="btnMinus" mnemonicParsing="false" onAction="#processSymbol" prefHeight="60.0" prefWidth="60.0" text="-" />
         </children>
      </HBox>
      <HBox prefHeight="60.0" prefWidth="270.0" spacing="10.0">
         <children>
            <Button fx:id="btn1" mnemonicParsing="false" onAction="#processNumber" prefHeight="60.0" prefWidth="60.0" text="1" />
            <Button fx:id="btn2" mnemonicParsing="false" onAction="#processNumber" prefHeight="60.0" prefWidth="60.0" text="2" />
            <Button fx:id="btn3" mnemonicParsing="false" onAction="#processNumber" prefHeight="60.0" prefWidth="60.0" text="3" />
            <Button fx:id="btnMultiply" mnemonicParsing="false" onAction="#processSymbol" prefHeight="60.0" prefWidth="60.0" text="*" />
         </children>
      </HBox>
      <HBox prefHeight="60.0" prefWidth="270.0" spacing="10.0">
         <children>
            <Button fx:id="btn0" mnemonicParsing="false" onAction="#processNumber" prefHeight="60.0" prefWidth="60.0" text="0" />
            <Button fx:id="btnComma" mnemonicParsing="false" onAction="#processNumber" prefHeight="60.0" prefWidth="60.0" text="." />
            <Button fx:id="btnEquals" mnemonicParsing="false" onAction="#processSymbol" prefHeight="60.0" prefWidth="60.0" text="=" />
            <Button fx:id="btnDivide" mnemonicParsing="false" onAction="#processSymbol" prefHeight="60.0" prefWidth="60.0" text="/" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
